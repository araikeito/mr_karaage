<!DOCTYPE html>
<html>
  <head>
    <title>Mr.Karaage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
        <p class = "title-karaage"><%= link_to "Mr.唐揚げ", homes_top_path, :style=>"color:white;" %></p>
        <% if user_signed_in? %>
               <span class="user_name"><i class="fas fa-user-alt"></i>&nbsp;&nbsp;
                <%= current_user.name %> さん</span>
             <% end %>
        <nav>
              <ul class="nav-list">
            <% if user_signed_in? %>
                <li class="nav-list-item"><i class="glyphicon glyphicon-book" style="color: white;" ></i>
                  <%= link_to "レシピ一覧", recipes_path, :style=>"color:white;" %>
                <li class="nav-list-item"><i class="glyphicon glyphicon-search" style="color: white;" ></i>
                  <%= link_to "お店を探す", shops_path, :style=>"color:white;" %>
                <li class="nav-list-item"><i class="glyphicon glyphicon-pencil" style="color: white;" ></i>
                  <%= link_to "レシピ投稿", new_recipe_path, remote: true, :style=>"color:white;" %>
                  <div class="modal fade" id="recipe-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  </div>
                <li class="nav-list-item"><i class="glyphicon glyphicon-user" style="color: white;" ></i>
                  <%= link_to "マイページ", user_path(current_user.id), :style=>"color:white;" %>
                <li class="nav-list-item"><i class="fas fa-sign-in-alt" style="color: white;" ></i>
                  <%= link_to " ログアウト", destroy_user_session_path, method: :delete, :style=>"color:white;" %></li>

            <% else %>

                <li class="nav-list-item"><i class="glyphicon glyphicon-book" style="color: white;" ></i>
                  <%= link_to "レシピ一覧", recipes_path, :style=>"color:white;" %>
                <li class="nav-list-item"><i class="glyphicon glyphicon-search" style="color: white;" ></i>
                  <%= link_to "お店を探す", shops_path, :style=>"color:white;" %>
                <li class="nav-list-item"><i class="glyphicon glyphicon-check" style="color: white;" ></i>
                  <%= link_to " 会員登録", new_user_registration_path, :style=>"color:white;" %></li>
                <li class="nav-list-item"><i class="fas fa-sign-in-alt" style="color: white;" ></i>
                  <%= link_to " ログイン", new_user_session_path, :style=>"color:white;" %>
                </li>
            <% end %>
               </ul>
         </nav>
    </header>
    <%= yield %>
    <footer>
      <h2 class="under-karaage">Mr.唐揚げ</h2>
    </footer>
  </body>
</html>
