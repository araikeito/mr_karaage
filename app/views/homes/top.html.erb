<div class="home">
	<div class="home-header">
		<div class="theTarget">
			<%= image_tag("images/PAK85_syokutakubkaraage20150203185651_TP_V.jpg") %>
                <%= image_tag("images/f08ee027de94.jpg") %>
		</div>
	</div>
	<div class="home-header-taitle">
		    <p class="sample-text1">唐揚げを愛するものたちよ...</p>
	</div>
	<div class="icon-box">
		<div class="icon-item" style="font-size:70px;">
		    <i class="glyphicon glyphicon-cutlery" ></i>
	    </div>
	</div>
	<div class="container">
		<div class="row">
			<div class="home-center clearfix">
				<div class="home-center-right">
					<%= link_to shops_path do %>
						<div class="home-right-image">
						</div>
					<% end %>
				</div>
				<div class="home-center-left">
					<div class="home-center-left-box">
						<p class="home-center-left-text">色んな唐揚げを掲載しています。<br>
							自分好みの唐揚げも見つかるはず！<br>
						    ぜひ寄っていってください！！
						</p>
						<div class="home-shop-link">
				           <%= link_to "店を探す", shops_path, class: "btn-flat-success" %>
				        </div>
				    </div>
			    </div>
			</div>
			<div class="icon-box">
				<div class="icon-item" style="font-size:70px;">
					<i class="glyphicon glyphicon-pencil" ></i>
				</div>
			</div>
			<div class="home-under clearfix">
				<div class="home-under-right">
					<%= link_to recipes_path do %>
						<div class="home-under-right-image">
						</div>
					<% end %>
				</div>
				<div class="home-nuder-left">
					<div class="home-under-left-box">
						<p class="home-under-left-text">自分好みの唐揚げレシピを探したり<br>
							オリジナルの唐揚げを投稿しよう！！
						</p>
						<div class="home-recipe-link">
							<%= link_to "レシピを見る", recipes_path, class: "btn-flat-success" %>
					    </div>
				    </div>
			    </div>
			</div>
	    </div>
    </div>
</div>

<script>
$("document").ready(function() {
    $(".theTarget").skippr();
});

// オプションを指定してSkipprの実行
$(".theTarget").skippr({
    // スライドショーの変化 ("fade" or "slide")
    transition : 'fade',
    // 変化に係る時間(ミリ秒)
    speed : 2500,
    // easingの種類
    easing : 'easeOutQuart',
    // ナビゲーションの形("block" or "bubble")
    navType : 'block',
    // 子要素の種類("div" or "img")
    childrenElementType : 'div',
    // ナビゲーション矢印の表示(trueで表示)
    arrows : true,
    // スライドショーの自動再生(falseで自動再生なし)
    autoPlay : true,
    // 自動再生時のスライド切替間隔(ミリ秒)
    autoPlayDuration : 4000,
    // キーボードの矢印キーによるスライド送りの設定(trueで有効)
    keyboardOnAlways : true,
    // 一枚目のスライド表示時に戻る矢印を表示するかどうか(falseで非表示)
    hidePrevious : false
});

</script>


